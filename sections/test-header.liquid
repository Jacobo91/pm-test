{{ 'test-header.css' | asset_url | stylesheet_tag }}
<header id="test-header-wrapper">
    <div class="test-header">
        <div class="test-header__logo">
            <img src="{{ section.settings.logo| image_url: width: 800 }}" alt="{{ section.setting.logo_alt_text }}">
        </div>
        {%- if section.settings.menu != blank -%}            
            <nav class="test-header__inline-menu">
                <ul class="test-header__list-menu" role="list">
                    {% for link in linklists[section.settings.menu].links %}
                        <li>
                            <a href="{{ link.url }}">
                                {{ link.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>
        {%- endif -%}
    </div>

    <div class="test-mega-menu">

    </div>
</header>

{% schema %}
    {
        "name": "test header",
        "settings": [
            {
                "type": "image_picker",
                "id": "logo",
                "label": "nav logo"
            },
            {
                "type": "text",
                "id": "logo_alt_text",
                "label": "logo alt text",
                "default": "navigation bar logo image",
                "info": "use to set an alt text for accessibility"
            },
            {
                "type": "link_list",
                "id": "menu",
                "label": "t:sections.header.settings.menu.label"
            }
        ],
        "presets": [
            {
                "name": "test header"
            }
        ]
    }
{% endschema %}